<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>

<VBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.exercice11.PopulationChartController">
    <children>
        <BarChart fx:id="chart" title="Population Chart">
            <xAxis>
                <CategoryAxis fx:id="xAxis"/>
            </xAxis>
            <yAxis>
                <NumberAxis/>
            </yAxis>
        </BarChart>

        <HBox>
            <TextField fx:id="dateField" promptText="Date"/>
            <TextField fx:id="valueField" promptText="Value"/>
            <Button text="Ajouter" onAction="#addData"/>
        </HBox>
    </children>
</VBox>
